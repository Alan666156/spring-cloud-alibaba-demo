<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fuhx.dao.StorageDao">

    <resultMap type="com.fuhx.entity.Storage" id="StorageMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="count" column="count" jdbcType="INTEGER"/>
        <result property="commodityCode" column="commodity_code" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StorageMap">
        select id,
               name,
               commodity_code,
               count
        from t_storage
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StorageMap">
        select id,
               name,
               commodity_code,
               count
        from t_storage limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StorageMap">
        select
        id, name, commodity_code, count
        from t_storage
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="commodityCode != null and commodityCode != ''">
                commodity_code = #{commodityCode},
            </if>
            <if test="count != null">
                and count = #{count}
            </if>
        </where>
    </select>

    <!--新增所有列-->
<!--    <insert id="insert" keyProperty="id" useGeneratedKeys="true">-->
<!--        insert into t_storage(name, count)-->
<!--        values (#{name}, #{count})-->
<!--    </insert>-->

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_storage(name, commodity_code, count)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.commodityCode}, #{entity.count})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_storage(name, count)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.name}, #{entity.count})
        </foreach>
        on duplicate key update
        name = values(name) , count = values(count)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_storage
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="commodityCode != null and commodityCode != ''">
                commodity_code = #{commodityCode},
            </if>
            <if test="count != null">
                count = #{count},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from t_storage
        where id = #{id}
    </delete>

</mapper>

