<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fuhx.dao.OrderDao">

    <resultMap type="com.fuhx.entity.Order" id="OrderMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="orderNo" column="order_no" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="commodityCode" column="commodity_code" jdbcType="VARCHAR"/>
        <result property="count" column="count" jdbcType="INTEGER"/>
        <result property="amount" column="amount" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="OrderMap">
        select id,
               order_no,
               user_id,
               commodity_code,
               count,
               amount
        from seata.t_order
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="OrderMap">
        select id,
               order_no,
               user_id,
               commodity_code,
               count,
               amount
        from seata.t_order limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="OrderMap">
        select
        id, order_no, user_id, commodity_code, count, amount
        from seata.t_order
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="orderNo != null and orderNo != ''">
                and order_no = #{orderNo}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="commodityCode != null and commodityCode != ''">
                and commodity_code = #{commodityCode}
            </if>
            <if test="count != null">
                and count = #{count}
            </if>
            <if test="amount != null">
                and amount = #{amount}
            </if>
        </where>
    </select>

    <!--新增所有列-->
<!--    <insert id="insert" keyProperty="id" useGeneratedKeys="true">-->
<!--        insert into seata.t_order(order_no, user_id, commodity_code, count, amount)-->
<!--        values (#{orderNo}, #{userId}, #{commodityCode}, #{count}, #{amount})-->
<!--    </insert>-->

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into seata.t_order(order_no, user_id, commodity_code, count, amount)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.orderNo}, #{entity.userId}, #{entity.commodityCode}, #{entity.count}, #{entity.amount})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into seata.t_order(order_no, user_id, commodity_code, count, amount)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.orderNo}, #{entity.userId}, #{entity.commodityCode}, #{entity.count}, #{entity.amount})
        </foreach>
        on duplicate key update
        order_no = values(order_no) , user_id = values(user_id) , commodity_code = values(commodity_code) , count =
        values(count) , amount = values(amount)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update seata.t_order
        <set>
            <if test="orderNo != null and orderNo != ''">
                order_no = #{orderNo},
            </if>
            <if test="userId != null and userId != ''">
                user_id = #{userId},
            </if>
            <if test="commodityCode != null and commodityCode != ''">
                commodity_code = #{commodityCode},
            </if>
            <if test="count != null">
                count = #{count},
            </if>
            <if test="amount != null">
                amount = #{amount},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from seata.t_order
        where id = #{id}
    </delete>

</mapper>

