<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fuhx.dao.AccountDao">

    <resultMap type="com.fuhx.entity.Account" id="AccountMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="amount" column="amount" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="AccountMap">
        select id,
               user_id,
               amount
        from t_account
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="AccountMap">
        select id,
               user_id,
               amount
        from t_account limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AccountMap">
        select
        id, user_id, amount
        from t_account
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="amount != null">
                and amount = #{amount}
            </if>
        </where>
    </select>

    <!--新增所有列-->
<!--    <insert id="insert" keyProperty="id" useGeneratedKeys="true">-->
<!--        insert into t_account(user_id, amount)-->
<!--        values (#{userId}, #{amount})-->
<!--    </insert>-->

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_account(user_id, amount)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.amount})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into t_account(user_id, amount)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.userId}, #{entity.amount})
        </foreach>
        on duplicate key update
        user_id = values(user_id) , amount = values(amount)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update t_account
        <set>
            <if test="userId != null and userId != ''">
                user_id = #{userId},
            </if>
            <if test="amount != null">
                amount = #{amount},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from t_account
        where id = #{id}
    </delete>

</mapper>

